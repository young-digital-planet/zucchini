<?xml version="1.0" encoding="utf-8"?>
<flex-config xmlns="http://www.adobe.com/2006/flex-config">
	<!-- 
	asdoc należy uruchomić z następującą opcją:
	-load-config+=asdoc-config.xml 
	-->
	<doc-sources>
		<path-element>src</path-element>
	</doc-sources>
	<compiler>
		<source-path>
			<path-element>src</path-element>
		</source-path>
		<actionscript-file-encoding>utf-8</actionscript-file-encoding>
        <external-library-path append="true">
        	<!--  <path-element>${ivy.lib.dir}/.swc</path-element>-->
        	
        </external-library-path>
	</compiler>
	<output>${asdoc.dir}</output>
	<main-title>Zucchini API</main-title>
	<window-title>Zucchini API</window-title>
	<footer>opensource.ydp.eu</footer>
	<packages>
		<package>
			<string>pl.ydp.utils</string>
			<string>Utilities. Common classes, can be used outide utopia.</string>
		</package>
	</packages>
</flex-config>
